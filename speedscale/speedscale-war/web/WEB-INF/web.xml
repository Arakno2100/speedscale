        <servlet-class>control.common.DeleteAddressServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateAccountServlet</servlet-name>
        <servlet-class>control.common.UpdateAccountServlet</servlet-class>
